<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo1naranjaabajo"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegistrosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView

                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="IndÃ­canos cual fue la especie?"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="549dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/btnAnfibio"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/anfibioinactivo"
                    android:onClick="onAnfibio" />

                <TextView
                    android:id="@+id/txtDireccion"
                    style="@style/TextViewBase"
                    android:layout_width="197dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:hint="Obteniendo direccion precisa..." />

                <ImageView
                    android:id="@+id/btnAve"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/aveinactivo"
                    android:onClick="onAve" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="350dp"
                    android:text="Anfibio"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text="Ave"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="519dp"
                android:layout_height="119dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/btnMamifero"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/mamiferoinactivo"
                    android:onClick="onMamifero" />

                <ImageView
                    android:id="@+id/btnReptil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/reptilinactivo"
                    android:onClick="onReptil" />

                <ImageView
                    android:id="@+id/btnDesc"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/animaldesconocidoinactivo"
                    android:onClick="onDesc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="615dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="90dp"
                    android:paddingLeft="9dp"
                    android:text="Mamifero"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center_horizontal"
                    android:text="Reptil"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="0dp"
                    android:text="Desconocido"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="51dp"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/botonatras"
                android:onClick="devolverMenu" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>