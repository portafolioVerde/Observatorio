<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1naranjaarriba"
    tools:context=".RegistradoActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/especieregistrada"
        android:textColor="@color/browser_actions_bg_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Usuario"
        android:textColor="@color/browser_actions_bg_grey"
        android:textSize="20sp" />

    <TextView
        android:layout_width="376dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/registrocompleto"
        android:textSize="22sp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Especie: "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEspecieRegistrada"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEspecieRegistrada"
            android:layout_width="267dp"
            android:layout_height="23dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout5"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="SubEspecie: "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvSubEspecieRegistrada"
            app:layout_constraintEnd_toStartOf="@+id/tvSubEspecieRegistrada"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSubEspecieRegistrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout6"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="103dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="FechayHora: "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvFechayHora"
            app:layout_constraintEnd_toStartOf="@+id/tvFechayHora"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFechayHora"
            android:layout_width="264dp"
            android:layout_height="26dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout7"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="DirecciÃ³n: "
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvDireccionRegistrada"
            app:layout_constraintEnd_toStartOf="@+id/tvDireccionRegistrada"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDireccionRegistrada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/regresardRegistros"
        android:layout_width="294dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:background="@drawable/borderedondo2"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/regresarregistros"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/regresar_Menu"
        android:layout_width="294dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/borderedondo2"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/regresarmenu_1"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="18sp"
        android:textStyle="bold" />



</LinearLayout>