<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo1naranjaabajo"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegistrosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView

                android:layout_width="629dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="IndÃ­canos cual fue la especie?"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="626dp"
                android:layout_height="159dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/btnAnfibio"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/anfibioinactivo"
                    android:onClick="onAnfibio" />

                <TextView
                    android:id="@+id/txtDireccion"
                    style="@style/TextViewBase"
                    android:layout_width="277dp"
                    android:layout_height="114dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:hint="Obteniendo direccion precisa..."
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnAve"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/aveinactivo"
                    android:onClick="onAve" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/linearLayout8"
                android:layout_width="644dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="207dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:text="Anfibio"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView10"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="441dp"
                    android:layout_marginLeft="441dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginRight="90dp"
                    android:text="Ave"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    tools:layout_editor_absoluteY="0dp" />

            </android.support.constraint.ConstraintLayout>


            <LinearLayout
                android:layout_width="628dp"
                android:layout_height="162dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/btnMamifero"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/mamiferoinactivo"
                    android:onClick="onMamifero" />

                <ImageView
                    android:id="@+id/btnReptil"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/reptilinactivo"
                    android:onClick="onReptil" />

                <ImageView
                    android:id="@+id/btnDesc"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/animaldesconocidoinactivo"
                    android:onClick="onDesc" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/linearLayout10"
                android:layout_width="627dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="68dp"
                    android:layout_marginLeft="68dp"
                    android:layout_marginEnd="198dp"
                    android:layout_marginRight="198dp"
                    android:layout_marginBottom="4dp"
                    android:text="Mamifero"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_horizontal"
                    android:text="Reptil"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:text="Desconocido"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView15"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:background="@drawable/botonatras"
                android:onClick="devolverMenu" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>