<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1naranjaabajo"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPhotoProfile"
                android:layout_width="139dp"
                android:layout_height="133dp"
                android:layout_marginTop="45dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvUserName"
                style="@style/TextViewBase"
                android:layout_marginTop="25dp"
                android:hint="@string/main.hint.userName" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/TextViewBase"
                android:layout_marginTop="8sp"
                android:hint="@string/main.hint.email"
                app:layout_constraintTop_toBottomOf="@id/tvUserName" />

            <TextView
                android:id="@+id/tvProvider"
                style="@style/TextViewBase"
                android:layout_marginTop="8sp"
                android:hint="@string/main.hint.provider"
                app:layout_constraintTop_toBottomOf="@id/tvEmail" />


            <TextView

                android:id="@+id/tvConfirmar"
                style="@style/TextViewBase"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Viste un animal en la vÃ­a?"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProvider" />

            <LinearLayout
                style="@style/TextViewBase"
                android:layout_width="265dp"
                android:layout_height="124dp"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvConfirmar">

                <ImageButton
                    android:id="@+id/btnNo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/no"
                    android:onClick="noContinuar" />

                <ImageButton
                    android:id="@+id/btnSi"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/si"
                    android:onClick="siContinuar" />
            </LinearLayout>

            <ImageButton
                android:layout_width="93dp"
                android:layout_height="84dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/playlist_edit"
                android:onClick="regresarEspecies"
                android:outlineAmbientShadowColor="@color/colorPrimary"
                android:outlineSpotShadowColor="@color/colorPrimary" />
            <ImageButton
                android:onClick="ir_mapa"
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_zoom" />

        </LinearLayout>

    </ScrollView>




</LinearLayout>