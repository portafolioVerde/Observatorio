<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1naranjaarriba"
    tools:context=".RegistradoActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/especieregistrada"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Usuario"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="551dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/registrocompleto"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:text="Especie: "
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvEspecieRegistrada"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:text="SubEspecie: "
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvSubEspecieRegistrada"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="505dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="FechayHora: "
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvFechayHora"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-12dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:text="DirecciÃ³n: "
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDireccionRegistrada"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/borderedondo"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/regresardRegistros"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:background="@drawable/borderedondo2"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/regresarregistros"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/regresar_Menu"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/borderedondo2"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/regresarmenu_1"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="24sp"
        android:textStyle="bold" />



</LinearLayout>